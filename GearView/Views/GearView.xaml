<Window x:Class="GearWindow.Views.GearView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GearWindow"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Design of Spur Gears" Height="700" Width="1000">
    <!--Height="700" Width="1000"-->
    <Window.Resources>
        <!--TextBlock Style -->
        <Style x:Key="TxtBlkStyle_Param" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="5, 3, 5, 3"/>
        </Style>
        <Style x:Key="TxtBlkStyle_Unit" TargetType="TextBlock" BasedOn="{StaticResource TxtBlkStyle_Param}">
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0, 3, 5, 3"/>
        </Style>
        <Style x:Key="TxtBlkStyle_Header" TargetType="TextBlock" BasedOn="{StaticResource TxtBlkStyle_Param}">
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!--TextBox Style 1-->
        <Style x:Key="TxtBoxStyle_Normal" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="5, 3, 5, 3"/>
        </Style>
        
        <!--Button Style 1-->
        <Style x:Key="BtnStyle_Info" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="0, 3, 5, 3"/>
        </Style>
        
        <!--Run Style-->
        <Style x:Key="RunStyle_Normal" TargetType="Run">
            <Setter Property="BaselineAlignment" Value="Subscript"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
        
        <!--DropDown Style-->
        <Style x:Key="DropdownStyle_Normal" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="5, 3, 5, 3"/>
        </Style>
        
        <!--RadioButton Style-->
        <Style x:Key="RadioBtnStyle_Normal" TargetType="RadioButton">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="5, 3, 5, 3"/>
        </Style>

        <!--GroupBox Style-->
        <Style x:Key="GroupboxStyle" TargetType="GroupBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5, 3, 5, 3"/>
        </Style>
    </Window.Resources>
    <Border Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!--Left Column-->
            <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid Grid.IsSharedSizeScope="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Parent Row 1-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFourthCol"/>
                        </Grid.ColumnDefinitions>

                        <!--Application-->
                        <TextBlock Grid.Column="0" Text="APPLICATION:" Style="{StaticResource TxtBlkStyle_Param}"
                               ToolTip="What will the gear drive be used for" FontWeight="Bold"/>
                        <Border Grid.Column="1" CornerRadius="5" BorderBrush="Black" BorderThickness="2"
                                Margin="5,3,5,3">
                            <TextBox Name="Application" Margin="0" Style="{StaticResource TxtBoxStyle_Normal}"/>
                        </Border>
                        <Button Grid.Column="2" Name="LoadApplication" Content="..." Style="{StaticResource BtnStyle_Info}"
                            ToolTip="More Information"/>
                    </Grid>

                    <!--Parent Row 2-->
                    <!--Initial input data header-->
                    <TextBlock Grid.Row="1" Text="Initial Input Data" Style="{StaticResource TxtBlkStyle_Header}"/>

                    <!--Parent Row 3-->
                    <Grid Grid.Row="2" Background="LightBlue">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFirstCol"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightSecondCol"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFourthCol"/>
                        </Grid.ColumnDefinitions>

                        <!--Input Power-->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Input Power:" Style="{StaticResource TxtBlkStyle_Param}"
                                   ToolTip="Design Specification"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"  Style="{StaticResource TxtBlkStyle_Param}">
                        P =
                        </TextBlock>
                        <TextBox x:Name="InputPower" Grid.Row="0" Grid.Column="2" Text="" Style="{StaticResource TxtBoxStyle_Normal}"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding PowerUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                        <!--Input Speed-->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Input Speed:" Style="{StaticResource TxtBlkStyle_Param}"
                                   ToolTip="Design Specification"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         n<Run Text="P" Style="{StaticResource RunStyle_Normal}"/> =
                        </TextBlock>
                        <TextBox x:Name="InputSpeed" Grid.Row="1" Grid.Column="2" Text="" Style="{StaticResource TxtBoxStyle_Normal}"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding SpeedUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                        <!--Diametral Pitch-->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Diametral Pitch:" Style="{StaticResource TxtBlkStyle_Param}">
                            <TextBlock.ToolTip>
                                <StackPanel Orientation="Horizontal">
                                    <Image>
                                        <Image.Source>
                                            C:\Users\AWAR ABRAHAM\Desktop\C# PDF\MechDesigner\MechDesigner-Kit\GearView\Images\DiametralPitch and ToothSize.PNG
                                        </Image.Source>
                                    </Image>
                                    <TextBlock Margin="5, 0, 0, 0" TextAlignment="Left">
                                        Design Decision:<LineBreak/>
                                        a trial diametral pitch. See Fig 1
                                    </TextBlock>
                                </StackPanel>
                            </TextBlock.ToolTip>
                        </TextBlock>
                                   
                        <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         P<Run Text="d" Style="{StaticResource RunStyle_Normal}"/> =
                        </TextBlock>
                        <TextBox x:Name="DiametralPitch" Grid.Row="2" Grid.Column="2" Text="" Style="{StaticResource TxtBoxStyle_Normal}"/>
                        <Button x:Name="ShowDPGraph" Grid.Row="2" Grid.Column="3" Content="..." Style="{StaticResource BtnStyle_Info}"
                            ToolTip="See Fig 1"/>

                        <!--Number of Pinion Teeth-->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Number of Pinion Teeth:" Style="{StaticResource TxtBlkStyle_Param}"
                                   ToolTip="Design Decision"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         N<Run Text="P" Style="{StaticResource RunStyle_Normal}"/> =
                        </TextBlock>
                        <TextBox Name="NoOfPinionTeeth" Grid.Row="3" Grid.Column="2" Text="" Style="{StaticResource TxtBoxStyle_Normal}"/>

                        <!--Desired Output Speed-->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Desired Output Speed:" Style="{StaticResource TxtBlkStyle_Param}"
                                   ToolTip="Design Specification"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         n<Run Text="G" Style="{StaticResource RunStyle_Normal}"/> =
                        </TextBlock>
                        <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding GearSpeed}" Style="{StaticResource TxtBoxStyle_Normal}"
                                 cal:Message.Attach="[Event LostFocus] = [Action ComputeGeometry]"/>
                        <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding SpeedUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                    </Grid>

                    <!--Parent Row 4-->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFirstCol"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightSecondCol"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--Computed Number of Gear Teeth-->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Computed Number of Gear Teeth:" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <!--<TextBlock Grid.Row="0" Grid.Column="1" Text="P = " Style="{StaticResource TxtBlkStyle_1}"/>-->
                        <TextBlock Text="{Binding NoOfGearTeeth}" Grid.Row="0" Grid.Column="2" Style="{StaticResource TxtBlkStyle_Unit}"/>
                        <!--<TextBlock Grid.Row="0" Grid.Column="3" Text="rpm" Style="{StaticResource TxtBlkStyle_2}"/>-->
                    </Grid>
                    
                    <!--Parent Row 5-->
                    <Grid Grid.Row="4" Background="LightBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFirstCol"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightSecondCol"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFourthCol"/>
                        </Grid.ColumnDefinitions>
                        <!--Chosen number of gear teeth-->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Enter: Chosen No. of Gear Teeth:" Style="{StaticResource TxtBlkStyle_Param}"
                                   ToolTip="Should be a whole number."/>
                        <!--<TextBlock Grid.Row="1" Grid.Column="1" Text="P = " Style="{StaticResource TxtBlkStyle_1}"/>-->
                        <TextBox x:Name="ChosenNoOfGearTeeth" Grid.Row="0" Grid.Column="2" Style="{StaticResource TxtBoxStyle_Normal}"/>
                        <!--<TextBlock Grid.Row="1" Grid.Column="3" Text="rpm" Style="{StaticResource TxtBlkStyle_2}"/>-->
                    </Grid>

                    <!--Parent Row 6-->
                    <Expander Grid.Row="5">
                        <Expander.Header>
                            <TextBlock Text="Computed Data:" Style="{StaticResource TxtBlkStyle_Header}"/>
                        </Expander.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="RightFirstCol"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--Actual Output Speed-->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Actual Output Speed:" Style="{StaticResource TxtBlkStyle_Param}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                                n<Run Text="G" Style="{StaticResource RunStyle_Normal}"/> =
                            </TextBlock>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ActualGearSpeed}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding SpeedUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <!--Gear Ratio-->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Gear Ratio:" Style="{StaticResource TxtBlkStyle_Param}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         m<Run Text="G" Style="{StaticResource RunStyle_Normal}"/> =
                            </TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding GearRatio}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <!--Pitch Diameter-Pinion-->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Pitch Diameter - Pinion:" Style="{StaticResource TxtBlkStyle_Param}"
                                       ToolTip="Theoretical Pitch Circle on which gear calculations are based"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         D<Run Text="P" Style="{StaticResource RunStyle_Normal}"/> =
                            </TextBlock>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding PinionPitchDiameter}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding LengthUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <!--Pitch Diameter-Gear-->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Pitch Diameter - Gear:" Style="{StaticResource TxtBlkStyle_Param}"
                                       ToolTip="Theoretical Pitch Circle on which gear calculations are based"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         D<Run Text="G" Style="{StaticResource RunStyle_Normal}"/> =
                            </TextBlock>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding GearPitchDiameter}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding LengthUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <!--Center Distance-->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Center Distance:" Style="{StaticResource TxtBlkStyle_Param}"
                                       ToolTip="Distance between the centers of the two gears"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                                 C =
                            </TextBlock>
                            <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding CenterDistance}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding LengthUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <!--Pitch Line Speed-->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Pitch Line Speed:" Style="{StaticResource TxtBlkStyle_Param}"
                                       ToolTip="The linear velocity at point of contact"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         v<Run Text="t" Style="{StaticResource RunStyle_Normal}"/> =
                            </TextBlock>
                            <TextBlock Grid.Row="5" Grid.Column="2" Text="{Binding PitchLineSpeed}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                            <TextBlock Grid.Row="5" Grid.Column="3" Text="{Binding LinearSpeedUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>


                            <!--Transmitted Load-->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Transmitted Load:" Style="{StaticResource TxtBlkStyle_Param}"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         W<Run Text="t" Style="{StaticResource RunStyle_Normal}"/> =
                            </TextBlock>
                            <TextBlock Grid.Row="6" Grid.Column="2" Text="{Binding TransmittedLoad}" Style="{StaticResource TxtBlkStyle_Unit}"
                                       ToolTip="Tangential Force"/>
                            <TextBlock Grid.Row="6" Grid.Column="3" Text="{Binding ForceUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <!--Radial Force-->
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Radial Force:" Style="{StaticResource TxtBlkStyle_Param}"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         F<Run Text="r" Style="{StaticResource RunStyle_Normal}"/> =
                            </TextBlock>
                            <TextBlock Grid.Row="7" Grid.Column="2" Text="{Binding RadialForce}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <TextBlock Grid.Row="7" Grid.Column="3" Text="{Binding ForceUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <!--Normal Force-->
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Normal Force:" Style="{StaticResource TxtBlkStyle_Param}"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                         F<Run Text="n" Style="{StaticResource RunStyle_Normal}"/> =
                            </TextBlock>
                            <TextBlock Grid.Row="8" Grid.Column="2" Text="{Binding NormalForce}" Style="{StaticResource TxtBlkStyle_Unit}"/>

                            <TextBlock Grid.Row="8" Grid.Column="3" Text="{Binding ForceUnit}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                        </Grid>
                    </Expander>
                    
                    <!--Parent row 7-->
                    <Grid Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!--Min Nom Max Headers-->
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Min" HorizontalAlignment="Center"
                                    FontWeight="Bold" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Nom" HorizontalAlignment="Center"
                                    FontWeight="Bold" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Max" HorizontalAlignment="Center"
                                    FontWeight="Bold" Style="{StaticResource TxtBlkStyle_Param}"/>
                        
                        <!--Face Width Guideline-->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Face Width Guidelines(in):" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MinFaceWidth}" HorizontalAlignment="Center"
                                    Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding NomFaceWidth}" HorizontalAlignment="Center"
                                    Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding MaxFaceWidth}" HorizontalAlignment="Center"
                                    Style="{StaticResource TxtBlkStyle_Param}"/>
                    </Grid>
                    
                    <!--Parent Row 8-->
                    <Grid Grid.Row="7" Background="LightBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFirstCol"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightSecondCol"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFourthCol"/>
                        </Grid.ColumnDefinitions>
                        
                        <!--Enter Face Width-->
                        <TextBlock Grid.Column="0" Text="Enter: Face Width:" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Column="1" Text="F =" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBox Grid.Column="2" Text="{Binding FaceWidth}" Style="{StaticResource TxtBoxStyle_Normal}"
                                 cal:Message.Attach="[Event LostFocus] = [Action CalcAlignmentFactor]"/>
                        <TextBlock Grid.Column="3" Text="in" Style="{StaticResource TxtBlkStyle_Unit}"/>
                    </Grid>
                    
                    <!--Parent Row 9-->
                    <Grid Grid.Row="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFirstCol"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--Ratio: Face Width to Pinion Diameter-->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ratio: Face Width to Pinion Diameter"
                                   Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                            F/D<Run Text="P" Style="{StaticResource RunStyle_Normal}"/> = 
                        </TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding FaceWidthToPinionDiameter}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                        
                        <!--Recommended Ratio-->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Recommended Ratio:"
                                   Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                            F/D<Run Text="P" Style="{StaticResource RunStyle_Normal}"/> &lt;
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding RecommendedRatio}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                    </Grid>
                    
                    <!--Parent row 10-->
                    <!--Material-->
                    <Grid Grid.Row="9" Background="LightBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!--Pinion Material-->
                        <TextBlock Grid.Column="0" Text="Pinion Material" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <ComboBox Name="pinionDropdown" Grid.Column="1" Style="{StaticResource DropdownStyle_Normal}"
                                  SelectedItem="{Binding PinionMaterial}" ItemsSource="{Binding AvailableMaterials}"
                                  cal:Message.Attach="[Event SelectionChanged] = [Action PinionMaterialChanged]"/>

                        <!--Gear Material-->
                        <TextBlock Grid.Column="3" Text="Gear Material" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <ComboBox Name="gearDropdown" Grid.Column="4" Style="{StaticResource DropdownStyle_Normal}"
                                  SelectedIndex="{Binding ElementName=pinionDropdown, Path=SelectedIndex, Mode=OneWay}"
                                  SelectedItem="{Binding GearMaterial}" ItemsSource="{Binding AvailableMaterials}"
                                   cal:Message.Attach="[Event SelectionChanged] = [Action GearMaterialChanged]"/>
                    </Grid>
                    
                    <!--Parent Row 11-->
                    <Grid Grid.Row="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFirstCol"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFourthCol"/>
                        </Grid.ColumnDefinitions> 
                        
                        <!--Elastic Coefficient-->
                        <TextBlock Grid.Column="0" Text="Elastic Coefficient" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                            C<Run Text="p" Style="{StaticResource RunStyle_Normal}"/> = 
                        </TextBlock>
                        <TextBlock Grid.Column="2" Text="{Binding ElasticCoefficient}" Style="{StaticResource TxtBlkStyle_Unit}"/>
                        <Button Grid.Column="3" Content="..." Style="{StaticResource BtnStyle_Info}"
                                ToolTip="See Table"/>
                    </Grid>
                    
                    <!--Parent Row 12-->
                    <Grid Grid.Row="11" Background="LightBlue">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFirstCol"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="RightFourthCol"/>
                        </Grid.ColumnDefinitions>
                        
                        <!--Quality number-->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Quality Number" Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                            Q<Run Text="v" Style="{StaticResource RunStyle_Normal}"/> = 
                        </TextBlock>
                        <ComboBox Grid.Row="0" Grid.Column="2" Style="{StaticResource DropdownStyle_Normal}"
                                  ItemsSource="{Binding AvailableQualityNo}" SelectedItem="{Binding QualityNumber}"
                                  cal:Message.Attach="[Event SelectionChanged] = [Action FindDynamicFactor]"/>

                        <Button x:Name="ShowQualityNumbers" Grid.Row="0" Grid.Column="3" Content="..." Style="{StaticResource BtnStyle_Info}"
                                ToolTip="See Graph"/>
                        
                        <!--Bending Geometry Factor - Pinion-->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Bending Geometry Factor - Pinion:"
                                   Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                            J<Run Text="P" Style="{StaticResource RunStyle_Normal}"/> =
                        </TextBlock>
                        <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding PinionBGeometryFactor}" Style="{StaticResource TxtBoxStyle_Normal}"/>
                        <Button x:Name="ShowBendingGeometry" Grid.Row="1" Grid.Column="3" Content="..." Style="{StaticResource BtnStyle_Info}"
                                ToolTip="See Graph"/>

                        <!--Bending Geometry Factor - Gear-->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Bending Geometry Factor - Gear:"
                                   Style="{StaticResource TxtBlkStyle_Param}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource TxtBlkStyle_Param}">
                            J<Run Text="G" Style="{StaticResource RunStyle_Normal}"/> =
                        </TextBlock>
                        <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding GearBGeometryFactor}" Style="{StaticResource TxtBoxStyle_Normal}"/>
                        <Button x:Name="ShowBendingGeometry2" Grid.Row="2" Grid.Column="3" Content="..." Style="{StaticResource BtnStyle_Info}"
                                ToolTip="See Graph"/>


                        <!--Pitting Geometry Factor-->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Pitting Geometry Factor:"
                                   Style="{StaticResource TxtBlkStyle_Param}"/>
